&НаСервереБезКонтекста
Процедура ДобавитьОписаниеНачальногоЗаполненияПрофиляНаВстроенномЯзыке(Таблица, ПрофильСсылка, КлючУпорядочения = "")
	
	Если Таблица.Найти(ПрофильСсылка, "Ссылка") <> Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Профиль = ПрофильСсылка.ПолучитьОбъект(); // СправочникОбъект.ПрофилиГруппДоступа
	
	Если ЗначениеЗаполнено(Профиль.Родитель) Тогда
		ДобавитьОписаниеНачальногоЗаполненияПрофиляНаВстроенномЯзыке(Таблица, Профиль.Родитель, КлючУпорядочения);
	КонецЕсли;
	КлючУпорядочения = КлючУпорядочения + " \ " + Профиль.Наименование;
	
	ИдентификаторПоставляемыхДанных = Строка(Профиль.ИдентификаторПоставляемыхДанных);
	
	ОписанияПрофилей = УправлениеДоступомСлужебный.ПоставляемыеПрофили().ОписанияПрофилей;
	СвойстваПрофиля = ОписанияПрофилей.Получить(ИдентификаторПоставляемыхДанных); // см. Справочники.ПрофилиГруппДоступа.СвойстваПоставляемогоПрофиля
	
	Имя = Профиль.ИмяПредопределенныхДанных;
	
	Если Не ЗначениеЗаполнено(Имя)
	   И СвойстваПрофиля <> Неопределено
	   И ЗначениеЗаполнено(СвойстваПрофиля.Имя) Тогда
		
		Имя = СвойстваПрофиля.Имя;
	КонецЕсли;
	
	Если Профиль.ИдентификаторПоставляемыхДанных
		= ОбщегоНазначенияКлиентСервер.ПустойУникальныйИдентификатор() Тогда
		
		Идентификатор = Строка(Профиль.Ссылка.УникальныйИдентификатор());
	Иначе
		Идентификатор = Строка(Профиль.ИдентификаторПоставляемыхДанных);
	КонецЕсли;
	
	Если Профиль.ЭтоГруппа И Не ЗначениеЗаполнено(Имя) Тогда
		Имя = ИмяИзСинонима(Профиль.Наименование);
		Номер = 2;
		Пока Таблица.Найти(Имя, "Имя") <> Неопределено Цикл
			Имя = Имя + Формат(Номер, "ЧГ=");
			Номер = Номер + 1;
		КонецЦикла;
	КонецЕсли;
	
	Строки = Новый Массив;
	Если Профиль.ЭтоГруппа Тогда
		Строки.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			"	// Папка профилей ""%1"".", Профиль.Наименование));
		Строки.Добавить(
			"	ОписаниеПапки = УправлениеДоступом.НовоеОписаниеПапкиПрофилейГруппДоступа();");
	Иначе
		Строки.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			"	// Профиль ""%1"".", Профиль.Наименование));
		Строки.Добавить(
			"	ОписаниеПрофиля = УправлениеДоступом.НовоеОписаниеПрофиляГруппДоступа();");
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Имя) Тогда
		Строки.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			"	%ОписаниеПрофиля%.Имя           = ""%1"";", Имя));
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Профиль.Родитель) Тогда
		ИмяРодителя = Таблица.Найти(Профиль.Родитель, "Ссылка").Имя;
		Строки.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			"	%ОписаниеПрофиля%.Родитель      = ""%1"";", ИмяРодителя));
	КонецЕсли;
	
	Строки.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			"	%ОписаниеПрофиля%.Идентификатор = ""%1"";", Идентификатор));
	
	Строки.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			"	%ОписаниеПрофиля%.Наименование  =
			|		НСтр(""ru = '%1'"",
			|			ОбщегоНазначения.КодОсновногоЯзыка());", Профиль.Наименование));
	
	Если Не Профиль.ЭтоГруппа Тогда
		ДобавитьОписаниеНазначения(Строки, Профиль);
		ДобавитьОписаниеПоставляемогоПрофиля(Строки, СвойстваПрофиля);
		ДобавитьОписаниеРолейИВидовДоступа(Строки, Профиль);
	КонецЕсли;
	
	Строки.Добавить(
		"	ОписанияПрофилей.Добавить(%ОписаниеПрофиля%);");
	
	Текст = СтрСоединить(Строки, Символы.ПС);
	
	Текст = СтрЗаменить(Текст, "%ОписаниеПрофиля%",
		?(Профиль.ЭтоГруппа, "ОписаниеПапки", "ОписаниеПрофиля"));
	
	НоваяСтрока = Таблица.Добавить();
	НоваяСтрока.Ссылка = ПрофильСсылка;
	НоваяСтрока.Имя = Имя;
	НоваяСтрока.Описание = Текст;
	НоваяСтрока.ЭтоГруппа = Профиль.ЭтоГруппа;
	НоваяСтрока.КлючУпорядочения = КлючУпорядочения;
	
КонецПроцедуры

